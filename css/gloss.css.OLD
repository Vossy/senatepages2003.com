body {
	background-color: #fff;
	font-family: Helvetica, Verdana, sans-serif;
	background-image: url("/images/gloss/top-bg.png");
	background-repeat: repeat-x;
	background-position: top center;
	margin-top: 50px;
}

.AboveBox {
	border: 1px solid #333;
	width: 500px;
	margin: 10px auto;
	background-color: #ffc;
	text-align: center;
	font-size: small;
	padding: 0;
}

/*
COLLEGE TICKER
*/

#TickerLabel {
	margin: 0;
	padding: 7.5px;
	font-size: 15px;

	font-weight: bold;
	text-align: center;
	height: 30px;
	width: 180px;
	position: absolute;
	top: 0;
	left: 0px;
	background-image: url("/images/gloss/top-name-bg.png");
	background-repeat: repeat-x;
	background-position: top center;
}

#TickerName {
	margin: 0;
	padding: 7.5px;
	font-size: 15px;
	color: #fff;
	width: 200px;
	height: 30px;
	position: absolute;
	top: 0;
	left: 200px;
}

#TickerCollege {
	margin: 0;
	padding: 7.5px;
	font-size: 15px;

	position: absolute;
	height: 30px;
	width: 500px;
	top: 0;
	left: 400px;
}

/*
STRUCTURE
*/

#TopLevel {
	width: 700px;
	margin: 10px auto;
	background-image: url("/images/gloss/page-bg.png");
	background-repeat: repeat-y;
	background-position: center center;
}

#Header {
	width: 700px;
	height: 150px;
	background-image: url("/images/gloss/gloss-header.png");
	background-repeat: no-repeat;
	background-position: bottom center;
}

#PageName {
	display: none;
}

#LoginName {
	margin: 0;
	padding: 7.5px;
	font-size: 15px;

	font-weight: bold;
	text-align: center;
	position: absolute;
	top: 0;
	right: 0;
	height: 30px;
	width: 200px;
	background-image: url("/images/gloss/top-name-bg.png");
	background-repeat: repeat-x;
	background-position: top center;
}

#Navigation {
	color: white;
	font-weight: bold;
	width: 170px;
	float: left;
	margin-left: 30px;
}

#Navigation ul {
	list-style-type: none;
	margin-left: 0;
	padding-left: 0;
}

#Navigation li {
	margin-left: 0;
	padding-left: 0;
	margin-bottom: 5px;
}

#Navigation li:before {
	content: "\00bb \0020";
}

#Navigation a:link, #Navigation a:visited {
	color: white;
	text-decoration: none;
}

#Navigation a:hover {
	border-bottom: 1px dashed #fff;
}

#Content {
	width: 450px;
	margin-left: 220px;
}

div.Post {
	font-size: small;
	margin-bottom: 2em;
}

#Footer {
	clear: both;
	text-align: center;
	font-size: x-small;
	background-image: url("/images/gloss/gloss-footer.png");
	background-repeat: no-repeat;
	background-position: top center;
	height: 72px;
	width: 700px;
}

#Footer p {
	padding-top: 35px;
}

/*
FONTS
*/

span#PageName, {
	font-size: small;
}

span.SearchKeyword {
background-color: yellow;
}

h1 {
font-size: large;
margin: 0px;
}

h3.PostTitle {
	font-size: large;
	margin: 0px;
	padding: 3px;
}

p.PostInfo {
	margin: 0px;
	padding: 2px;
	padding-left: 20px;
	font-size: small;
	color: #08c;
}

p.ExtraOption {
	margin: 0;
	padding: 0;
	float: right;
	clear: right;
}

/*
HYPERLINK STYLES
*/

a:link {
   color: #08c;
   text-decoration: none;
}

a:visited {
   color: #08c;
   text-decoration: none;
}

a:hover {
   border-bottom: 1px dashed #08c;
}

b a:link {
   color: #000;
   text-decoration: none
}

b a:visited {
   color: #555;
   text-decoration: none;
}

b a:hover {
   color: #0000ff;
   text-decoration: underline;
}

a.PostLink:link, a.PostLink:visited {
	color: #000;
	text-decoration: none
}

a.PostLink:hover {
	color: #08c;
	border-bottom: 1px dashed #08c;
}

a.ImageLink {
	border: none !important;
}

a img {
border: none;
}

/*
LOGIN SPLASH SCREEN
*/

#LoginBox {
	background-image: url("/images/gloss/login-bg2.png");
	background-repeat: no-repeat;
	background-position: center center;
	height: 300px;
	width: 300px;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-left: -150px;
	margin-top: -150px;
	text-align: center;
}

#LoginBox h1 {
	display: none;
}

#LoginBox #first {
	margin-top: 120px;
}

#LoginBox p {
	width: 100%;
	margin: 0;
	padding: 4px;
}

#LoginBox span {
	display: block;
	float: left;
	width: 110px;
	text-align: right;
}

#LoginBox input.entry {
	border: 1px solid #0083c4;
	padding-left: 2px;
}

/*
MISC
*/

p.Contact {
	margin: 2px;
}

div#Header h1 {
	display: none;
}

hr.PostSeparator {
	display: none;
}






